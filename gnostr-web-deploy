#!/usr/bin/env bash

if [[ $1 = "-h" ]] || [[ $1 = "--help" ]]; then

  echo ""help""

exit;
fi
if [[ $1 = "-v" ]] || [[ $1 = "--version" ]]; then

  echo ""v0.0.2""

exit;
fi


